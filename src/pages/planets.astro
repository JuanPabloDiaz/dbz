---
import Layout from '../layouts/Layout.astro';
import PlanetCard from '../components/PlanetCard.astro';
import Pagination from '../components/Pagination.astro';
import Icon from '../components/Icon.astro';
import { dragonBallApi } from '../utils/api';
import type { Planet, ApiResponse } from '../types/api';

// Get query parameters
const url = new URL(Astro.request.url);
const page = parseInt(url.searchParams.get('page') || '1');
const name = url.searchParams.get('name') || '';

// Fetch planets with filters
const params = {
  page,
  limit: 9,
  ...(name && { name }),
};

let planets: Planet[] = [];
let meta = {
  totalItems: 0,
  itemCount: 0,
  itemsPerPage: 9,
  totalPages: 0,
  currentPage: page,
};

try {
  const response = await dragonBallApi.getAllPlanets(params);
  planets = response?.items || [];
  meta = response?.meta || meta;
} catch (error) {
  console.error('Error fetching planets:', error);
  // Keep default values
}
---

<Layout title="Dragon Ball Planets">
  <div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-5xl font-manga text-namek-green mb-4">Mystical Worlds</h1>
      <p class="text-xl text-gray-300">Journey across the galaxy and explore incredible planets</p>
    </div>

    <!-- Search -->
    <div class="bg-gray-800 p-6 rounded-lg mb-8 border border-namek-green/20">
      <h2 class="text-2xl font-dragon text-namek-green mb-4">Search Planets</h2>

      <form class="flex gap-4">
        <div class="flex-1">
          <input
            type="text"
            name="name"
            value={name}
            placeholder="Search planets by name..."
            class="w-full p-3 bg-gray-700 text-white rounded-lg border border-gray-600 focus:border-namek-green focus:outline-none text-lg"
          />
        </div>

        <button
          type="submit"
          class="bg-gradient-to-r from-namek-green to-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:shadow-lg transition-all duration-300 flex items-center gap-2"
        >
          <Icon name="🔍" size="md" color="white" />
          Search
        </button>
      </form>
    </div>

    <!-- Results Info -->
    <div class="flex justify-between items-center mb-6">
      <p class="text-gray-300">
        Showing {meta.itemCount} of {meta.totalItems} planets
        {name ? ' (filtered)' : ''}
      </p>
      <p class="text-gray-300">
        Page {meta.currentPage} of {meta.totalPages}
      </p>
    </div>

    <!-- Planets Grid -->
    {
      planets.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
          {planets.map((planet) => (
            <PlanetCard planet={planet} showDetails={true} />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="flex justify-center mb-4">
            <Icon name="🌌" size="6xl" color="namek-green" />
          </div>
          <h3 class="text-2xl font-manga text-namek-green mb-2">No Planets Found</h3>
          <p class="text-gray-300 mb-6">Try adjusting your search terms</p>
          <a
            href="/planets"
            class="bg-gradient-to-r from-namek-green to-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:shadow-lg transition-all duration-300"
          >
            Reset Search
          </a>
        </div>
      )
    }

    <!-- Pagination -->
    {
      planets.length > 0 && (
        <Pagination
          currentPage={meta.currentPage}
          totalPages={meta.totalPages}
          baseUrl="/planets"
          searchParams={url.searchParams}
        />
      )
    }

    <!-- Fun Facts -->
    <section class="mt-16 bg-gray-800 p-8 rounded-lg border border-namek-green/20">
      <h2 class="text-3xl font-manga text-namek-green mb-6 text-center">Did You Know?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div>
          <div class="flex justify-center mb-2">
            <Icon name="🌍" size="4xl" color="namek-green" />
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Earth (Planet 4032-877)</h3>
          <p class="text-gray-300 text-sm">Home to the Z Fighters and countless adventures</p>
        </div>
        <div>
          <div class="flex justify-center mb-2">
            <Icon name="🌍" size="4xl" color="namek-green" />
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Namek</h3>
          <p class="text-gray-300 text-sm">Birthplace of the Dragon Balls and Piccolo</p>
        </div>
        <div>
          <div class="text-4xl mb-2">🌱</div>
          <h3 class="text-lg font-semibold text-white mb-2">Planet Vegeta</h3>
          <p class="text-gray-300 text-sm">Former homeworld of the proud Saiyan race</p>
        </div>
      </div>
    </section>
  </div>
</Layout>
